{
  "name": "cc-context-stats",
  "version": "1.3.0",
  "description": "Monitor your Claude Code session context in real-time - track token usage and never run out of context",
  "main": "scripts/statusline.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint scripts/statusline.js",
    "lint:fix": "eslint scripts/statusline.js --fix",
    "format": "prettier --write 'scripts/*.js' '*.json' '*.md'",
    "format:check": "prettier --check 'scripts/*.js' '*.json' '*.md'"
  },
  "keywords": [
    "claude",
    "claude-code",
    "context",
    "tokens",
    "monitoring",
    "statusline",
    "terminal",
    "cli",
    "dashboard"
  ],
  "author": "luongnv89",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luongnv89/cc-context-stats.git"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
